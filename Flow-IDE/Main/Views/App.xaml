<Application x:Class="Flow_IDE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Flow_IDE"
             StartupUri="Base/MainWindow.xaml">
    
    <!--Definition of Universal App Resources-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/FlowMenuItem.xaml"/>
                <ResourceDictionary Source="Controls/FlowTabControl.xaml"/>
                <ResourceDictionary Source="Controls/FlowTabItem.xaml"/>
                <ResourceDictionary Source="Controls/FlowOverheadMenu.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
